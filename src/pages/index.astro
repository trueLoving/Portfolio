---
import LandingPage from '../components/LandingPage.astro';
import { getUserConfig } from '../config/loader';
import { inferServerLocale } from '../i18n/server';
import Layout from '../layouts/Layout.astro';

const url = new URL(Astro.request.url);
const locale = inferServerLocale({ request: Astro.request, url });
const userConfig = getUserConfig(locale);
---

<!-- 
  Customize these values for your portfolio:
  - title: Your name and role
  - description: Brief description of your expertise
  - canonical: Your website URL
  - openGraph: Social media sharing metadata
-->
<Layout
  lang={locale}
  title={userConfig.seo.title}
  description={userConfig.seo.description}
  canonical={userConfig.website}
  openGraph={{
    url: userConfig.website,
    title: userConfig.seo.title,
    description: userConfig.seo.description,
    site_name: userConfig.name,
  }}
>
  <LandingPage />
</Layout>
